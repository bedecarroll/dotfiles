#!/usr/bin/env bash

name=${1:-"main"}
if ! tmux attach-session -t $name; then
  tmux new-session -d -s $name

  tmux send-keys 'weechat' ENTER
  tmux rename-window -t $name:0 'IRC'
  tmux new-window -t $name:1 -n 'Email'
  tmux send-keys 'neomutt' ENTER
  tmux new-window -t $name:2 -n 'Highly Respected'
  tmux send-keys 'cd /mnt/c/Users/bc/Dropbox/highly_respected/' ENTER
  tmux new-window -t $name:3

  tmux select-window -t $name:1
  tmux attach-session -t $name
fi
