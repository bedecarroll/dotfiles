# Infra tools policy (allow most; prompt for destructive ops).
prefix_rule(
  pattern = ["terraform"],
  decision = "allow",
)

prefix_rule(
  pattern = ["terraform", ["apply", "destroy"]],
  decision = "prompt",
)

prefix_rule(
  pattern = ["pulumi"],
  decision = "allow",
)

prefix_rule(
  pattern = ["pulumi", ["up", "destroy"]],
  decision = "prompt",
)
