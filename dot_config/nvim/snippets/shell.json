      "EOF",
      "",
      "if [[ $# -eq 0 ]]; then",
      "    echo \"\\$doc\"",
      "    exit 1",
      "fi",
      "",
      "while :; do",
      "  case \\$1 in",
      "    --clowntown)",
      "      _clowntown_mode=1",
      "    ;;",
      "    -d|--debug)",
      "      _debug_mode=1",
      "    ;;",
      "    -?*)",
      "      echo \"ERROR: Unknown argument\"",
      "      echo \"\\$doc\"",
      "      exit 1",
      "    ;;",
      "    *)",
      "      break",
      "  esac",
      "  shift",
      "done",
      "",
      "# Start here",
      "$0",
      ""
