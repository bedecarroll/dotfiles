[blame]
  ignoreRevsFile = .git-blame-ignore-revs
  markIgnoredLines = true
  markUnblamableLines = true

[gpg]
  format = ssh

[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers

[commit]
  gpgsign = true

[tag]
  gpgsign = true

[diff "sopsdiffer"]
  textconv = "sops decrypt"

[include]
  path = yubikey
  path = ghcli
  path = ssh
