# shellcheck shell=bash

# Make HOSTNAME var expicit for TMUX
# https://superuser.com/questions/1498056/why-on-printenv-i-cannot-see-the-hostname-enviromental-variable
export HOSTNAME="${HOSTNAME}"

# Setup XDG
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export TMUX_TMPDIR="$XDG_RUNTIME_DIR"

# Source standard configs
for x in "$XDG_CONFIG_HOME"/bash/*; do
  # Ignore directories
  if [ -f "$x" ]; then
    source "$x"
  fi
done

# Source system/work specific files
if [ -d "$XDG_CONFIG_HOME/bash/$(hostname)" ] ; then
  for x in "$XDG_CONFIG_HOME"/bash/$(hostname)/*; do
    [ -f "$x" ] || continue
    source "$x"
  done
fi
